{
  "name": "mod-eat",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "workspaces": [
    "apps/*",
    "apps/backend/*",
    "apps/frontend/*",
    "packages/*"
  ],
  "scripts": {
    "dev:backend": "bun run --filter backend dev",
    "dev:buyer": "bun run --filter buyer-app dev",
    "dev:seller": "bun run --filter seller-app dev",
    "dev:all": "bun run --filter '*' dev"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.4.0",
    "react-dom": "^19.2.1",
    "react-router-dom": "^7.9.6"
  }
}
